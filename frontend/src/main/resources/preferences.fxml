<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane fx:id="borderPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.supsi.connectfour.frontend.view.PreferencesView">
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="boxLanguageLabel" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="languageComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label fx:id="playerOneColorLabel" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ColorPicker fx:id="playerOneColorPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label fx:id="playerOneShapeLabel" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="playerOneShapeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label fx:id="playerTwoColorLabel" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ColorPicker fx:id="playerTwoColorPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label fx:id="playerTwoShapeLabel" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="playerTwoShapeComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Button fx:id="saveButton" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Button fx:id="cancelButton" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
</BorderPane>
