<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.supsi.connectfour.frontend.view.PreferencesView">
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Language:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="languageComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Player 1 Token Color:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ColorPicker fx:id="playerOneColorPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Player 1 Token Shape:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="playerOneShapeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Player 2 Token Color:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ColorPicker fx:id="playerTwoColorPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Player 2 Token Shape:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="playerTwoShapeComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Button text="Save" fx:id="saveButton" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Button text="Cancel" fx:id="cancelButton" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
</BorderPane>
